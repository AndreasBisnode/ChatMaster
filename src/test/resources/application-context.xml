<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="chatMessageRepository"
          class="common.messagebucket.repository.ChatMessageRepositoryMap">
    </bean>

    <bean id="chatAdminService"
          class="common.chatmaster.service.ChatAdminServiceMapImplementation">
    </bean>

    <bean id="chatService"
          class="common.chatmaster.service.ChatServiceImplementation">
        <constructor-arg index="0" ref="chatMessageRepository"/>
        <constructor-arg index="1" ref="chatAdminService"/>
    </bean>

    <bean id="objectMapper"
          class="com.fasterxml.jackson.databind.ObjectMapper">
    </bean>



</beans>
